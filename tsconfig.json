{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "rootDir": "./src",
      "outDir": "./dist",
      "esModuleInterop": true,
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "Node",
      "sourceMap": true,
      "resolveJsonModule": true
    }, 
    "include": ["src/**/*"],
    "exclude":["node_modules", "**/*.spec.ts"]
  }